{% extends "AssoMakerBaseBundle::layout.html.twig"  %}

{% block content %}
    <div class="row-fluid">
        <div class="span6">
            <h1>Bienvenue sur PlanningMaker</h1>
            {% for flashMessage in app.session.flashbag.get('error') %}
                <div class="alert alert-error">
                    {{ flashMessage }}
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('notice') %}
                <div class="alert alert-warning">
                    {{ flashMessage }}
                </div>
            {% endfor %}
            <p>Connecte-toi avec l'un des services suivants si tu as déjà un compte :</p>
            <div id="logins">
                <p>
                    <a class="btn btn-danger btn-large" href="{{ hwi_oauth_login_url('google') }}">Se connecter avec Google</a>
                </p>
            </div>
            <p>Sinon, pour tout problème ou pour t'inscrire, contacte le responsable : <a href="mailto:highfive.orga@bde-insa-lyon.fr">highfive.orga@bde-insa-lyon.fr</a></p>

        </div>
        <div class="span6" style="min-width: 700px;text-align: center;">
            <img style="width: 500px" src="https://scontent.xx.fbcdn.net/hphotos-xlf1/v/t1.0-9/10522089_965716610130509_3630166321341339206_n.jpg?oh=02f561720c73283c3e379cd8b699f957&oe=578AA7E5">
        </div>
    </div>
{% endblock %}

